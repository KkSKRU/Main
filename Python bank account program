print("Welcome to the Bank of NatWest!")
total_balance = 0

while True:
    action = input(f"Your current balance is {total_balance} euros. What would you like to do today? Type 'deposit', 'withdraw', 'check', or 'exit' to do the following actions: ")

    if action == "exit":
        print("You have now exited your account.")
        break

    if action == "deposit":
        deposit = input("Please enter the amount in digits you would like to deposit: ")
        try:
            amount = float(deposit)
            if amount < 0:
                print("Invalid input. Please enter a positive numerical value.")
            else:
                total_balance += amount
                print(f"Your deposit of {amount} euros has been made.")
        except ValueError:
            print("Invalid input. Please enter a numerical value.")

    elif action == "withdraw":
        withdraw = input("Please enter the amount in digits you would like to withdraw: ")
        try:
            amount = float(withdraw)
            if amount < 0:
                print("Invalid input. Please enter a positive numerical value.")
            elif total_balance < amount:
                print("Insufficient funds.")
            else:
                total_balance -= amount
                print(f"Withdrawal of {amount} euros successful. Your balance now is {total_balance} euros.")
        except ValueError:
            print("Invalid input. Please enter a numerical value.")

    elif action == "check":
        print(f"Your current balance is {total_balance} euros.")

    else:
        print("Invalid action. Please try again.")
